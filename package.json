{
  "name": "persrm",
  "version": "0.1.0",
  "description": "Personalized UI/UX Performance Agent with Task Monitor",
  "main": "dist/index.js",
  "bin": {
    "persrm": "bin/cli-wrapper.js"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "start": "npm run start --workspace=persrm-ui",
    "dev": "npm run dev --workspace=persrm-ui",
    "dev:cli": "ts-node src/cli/persrm-cli.ts",
    "test": "npm run test --workspaces",
    "test:uuid": "npx ts-node src/tests/validateUuid.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "ux:analyze": "ts-node src/cli/persrm-cli.ts analyze ./src -o ./reports -v -w",
    "ux:report": "ts-node src/cli/persrm-cli.ts report -f html -o ./reports --screenshots",
    "ux:optimize": "ts-node src/cli/persrm-cli.ts optimize ./src -o ./reports -v",
    "ux:watch": "cross-env PERSRM_MODE=prod ts-node src/agents/watch.ts",
    "ux:watch:mock": "cross-env PERSRM_MODE=mock ts-node src/agents/watch.ts",
    "cli": "node bin/cli-wrapper.js",
    "build:cli": "npx tsc -p tsconfig.cli.json",
    "typecheck": "npx tsc --noEmit",
    "setup:dev": "npm install @types/fs-extra@11.0.4 --save-dev",
    "task-monitor": "node run-task-monitor.js"
  },
  "keywords": [
    "ui",
    "ux",
    "performance",
    "analysis",
    "optimization",
    "agent",
    "task-monitor"
  ],
  "workspaces": [
    "persrm-core",
    "persrm-ui",
    "persrm-bridge-anythingllm"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "@radix-ui/react-dialog": "^1.0.4",
    "@radix-ui/react-popover": "^1.0.6",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.2.11",
    "@types/uuid": "^10.0.0",
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "commander": "^11.1.0",
    "date-fns": "^2.30.0",
    "express": "^4.18.2",
    "framer-motion": "^10.16.0",
    "fs-extra": "^11.1.1",
    "globby": "^11.1.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.265.0",
    "next": "^13.5.6",
    "ora": "^5.4.1",
    "puppeteer": "^21.5.0",
    "pusher": "^5.2.0",
    "pusher-js": "^8.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.3.0",
    "tailwindcss-animate": "^1.0.6",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.8",
    "@types/lodash": "^4.17.16",
    "@types/node": "^20.9.2",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.24",
    "prettier": "^3.1.0",
    "prisma": "^6.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^3.1.2"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
