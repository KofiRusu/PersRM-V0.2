{
  "name": "persrm",
  "version": "0.1.0",
  "description": "Personalized UI/UX Performance Agent",
  "main": "dist/index.js",
  "bin": {
    "persrm": "bin/cli-wrapper.js"
  },
  "scripts": {
    "build": "react-scripts build",
    "start": "react-scripts start",
    "dev": "ts-node src/cli/persrm-cli.ts",
    "test": "react-scripts test",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepare": "npm run build",
    "ux:analyze": "ts-node src/cli/persrm-cli.ts analyze ./src -o ./reports -v -w",
    "ux:analyze:basic": "node -e \"console.log('PersRM CLI Basic Mode'); console.log('This is a placeholder for the full CLI.'); console.log('The TypeScript version has been fixed but there are still dependency issues to resolve.'); process.exit(0)\"",
    "ux:report": "ts-node src/cli/persrm-cli.ts report -f html -o ./reports --screenshots",
    "ux:optimize": "ts-node src/cli/persrm-cli.ts optimize ./src -o ./reports -v",
    "ux:watch": "cross-env PERSRM_MODE=prod ts-node src/agents/watch.ts",
    "ux:watch:mock": "cross-env PERSRM_MODE=mock ts-node src/agents/watch.ts",
    "cli": "node bin/cli-wrapper.js",
    "build:cli": "npx tsc -p tsconfig.cli.json",
    "typecheck": "npx tsc --noEmit",
    "setup:dev": "npm install @types/fs-extra@11.0.4 --save-dev"
  },
  "keywords": [
    "ui",
    "ux",
    "performance",
    "analysis",
    "optimization",
    "agent"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "fs-extra": "^11.1.1",
    "globby": "^11.1.0",
    "ora": "^5.4.1",
    "puppeteer": "^21.5.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.2",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
